---
import Header from '../components/po/Header';
import '../styles/global.css';   // ต้องมีไฟล์นี้จริงที่ src/styles/global.css
const title = Astro.props.title ?? 'ระบบใบสั่งซื้อ';
---

<html lang="th">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-50 text-slate-900">
    <Header client:load />
    <main class="container-nice mx-auto">
      <slot />
    </main>
  </body>
</html>
