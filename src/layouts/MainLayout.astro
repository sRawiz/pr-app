---
import SidebarLayout from '../components/common/SidebarLayout';
import '../styles/global.css';
const title = Astro.props.title ?? 'ระบบใบสั่งซื้อ';
---

<html lang="th">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" />
    <title>{title}</title>
    <style>
      html, body {
        font-family: 'Kanit', sans-serif;
      }
    </style>
  </head>

  <body class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-50 text-slate-900">
    <SidebarLayout client:load>
      <slot />
    </SidebarLayout>
  </body>
</html>
